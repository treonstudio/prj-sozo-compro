{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "X-Frame-Options", "value": "ALLOW-FROM https://domain-wordpress-anda.com" },
        { "key": "Content-Security-Policy", "value": "frame-ancestors https://domain-wordpress-anda.com;" }
      ]
    }
  ]
}
